{
  "compilerOptions": {
    "declaration": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "target": "es2022",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDirs": ["./src", "test"]
  },
  "include": ["src", "test"],
  "exclude": ["dist", "jest.config.ts"]
}
